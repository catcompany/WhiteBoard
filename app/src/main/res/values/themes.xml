<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WhiteBoard" parent="Theme.MaterialComponents.Light">
        <!-- 主题颜色。app的主要颜色，即整个屏幕和所有控件的主要颜色，首选颜色。-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏的颜色-->
        <item name="colorPrimaryVariant">@color/colorStatusBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <!-- 底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <!-- 控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 字体颜色-->
        <item name="android:textColor">@color/colorText</item>
        <!-- 窗口背景色-->
        <item name="android:windowBackground">@color/colorWindowBackground</item>

    </style>


    <style name="HeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_40px</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>