<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 暗色模式-->
    <style name="Theme.WhiteBoard" parent="Theme.MaterialComponents.DayNight">
        <!-- 主题颜色。app的主要颜色，即整个屏幕和所有控件的主要颜色，首选颜色。-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏的颜色-->
        <item name="colorPrimaryVariant">@color/colorStatusBar</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <!-- 底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <!-- 控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 字体颜色-->
        <item name="android:textColor">@color/colorText</item>
        <!-- 窗口背景色-->
        <item name="android:windowBackground">@color/colorWindowBackground</item>


    </style>


    <style name="Theme.WhiteBoardActivity" parent="Theme.AppCompat.NoActionBar">

    </style>

</resources>